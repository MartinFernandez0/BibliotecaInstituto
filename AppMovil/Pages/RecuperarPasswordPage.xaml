<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="AppMovil.Pages.RecuperarPasswordPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:AppMovil.ViewModels"
             Title="Recuperar Contraseña"
             Shell.NavBarIsVisible="False">

    <ContentPage.BindingContext>
        <viewModels:RecuperarPasswordViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Spacing="0" BackgroundColor="#F6F6F6">

            <!-- Header con gradiente y botón volver -->
            <Grid RowDefinitions="Auto,Auto,Auto" Padding="0">
                <Frame Grid.Row="0"
                       BackgroundColor="#4ECDC4"
                       Padding="0,40,0,0"
                       CornerRadius="0"
                       HasShadow="False">
                    <Grid>
                        <Button Text="←"
                                Command="{Binding VolverCommand}"
                                BackgroundColor="Transparent"
                                TextColor="White"
                                FontSize="24"
                                HorizontalOptions="Start"
                                VerticalOptions="Start"
                                WidthRequest="50"
                                HeightRequest="50"
                                Margin="10,0,0,0"/>
                    </Grid>
                </Frame>
                <Frame Grid.Row="1"
                       BackgroundColor="#4ECDC4"
                       Padding="20,0,20,20"
                       CornerRadius="0"
                       HasShadow="False">
                    <VerticalStackLayout Spacing="18" HorizontalOptions="Center">
                        <Label Text="Olvidé mi contraseña"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="White"
                               HorizontalOptions="Center"
                               Margin="0,10,0,0"/>
                        <Frame BackgroundColor="White"
                               CornerRadius="80"
                               WidthRequest="140"
                               HeightRequest="140"
                               HorizontalOptions="Center"
                               Padding="20"
                               HasShadow="True">
                            <Label Text="🔐📧"
                                   FontSize="60"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Frame>
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <!-- Contenido principal -->
            <VerticalStackLayout Padding="30,30,30,0" Spacing="28" BackgroundColor="White">

                <!-- Texto instructivo -->
                <VerticalStackLayout Spacing="8" Margin="0,0,0,10">
                    <Label Text="Ingresá tu correo electrónico"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="#3498DB"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"/>
                    <Label Text="Te enviaremos las instrucciones para restablecer tu contraseña"
                           FontSize="15"
                           TextColor="#7F8C8D"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           LineBreakMode="WordWrap"/>
                </VerticalStackLayout>

                <!-- Campo de email -->
                <VerticalStackLayout Spacing="6">
                    <Entry Text="{Binding Mail}"
                           Placeholder="DNI o Correo electrónico"
                           PlaceholderColor="#BDC3C7"
                           TextColor="#2C3E50"
                           FontSize="16"
                           Keyboard="Email"
                           BackgroundColor="Transparent"/>
                    <BoxView HeightRequest="1"
                             BackgroundColor="#BDC3C7"
                             HorizontalOptions="FillAndExpand"/>
                </VerticalStackLayout>

                <!-- Mensajes -->
                <VerticalStackLayout Spacing="8">
                    <!-- Mensaje de error -->
                    <Frame IsVisible="{Binding ErrorMessage}"
                           BackgroundColor="#E74C3C"
                           Padding="10"
                           CornerRadius="8"
                           HasShadow="False"
                           Margin="0,0,0,0">
                        <Label Text="{Binding ErrorMessage}"
                               TextColor="White"
                               FontSize="14"
                               HorizontalOptions="Center"/>
                    </Frame>
                    <!-- Mensaje de éxito -->
                    <Frame IsVisible="{Binding SuccessMessage}"
                           BackgroundColor="#27AE60"
                           Padding="10"
                           CornerRadius="8"
                           HasShadow="False"
                           Margin="0,0,0,0">
                        <Label Text="{Binding SuccessMessage}"
                               TextColor="White"
                               FontSize="14"
                               HorizontalOptions="Center"/>
                    </Frame>
                    <!-- Indicador de carga -->
                    <HorizontalStackLayout IsVisible="{Binding IsBusy}" Spacing="10" HorizontalOptions="Center">
                        <ActivityIndicator IsRunning="{Binding IsBusy}" Color="#4ECDC4"/>
                        <Label Text="Enviando instrucciones..."
                               TextColor="#4ECDC4"
                               VerticalOptions="Center"
                               FontSize="14"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <!-- Botón enviar -->
                <Button Text="Enviar"
                        Command="{Binding EnviarCommand}"
                        BackgroundColor="#4ECDC4"
                        TextColor="White"
                        FontSize="18"
                        FontAttributes="Bold"
                        HeightRequest="54"
                        CornerRadius="12"
                        Margin="0,20,0,30"/>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>